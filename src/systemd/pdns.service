[Unit]
Description=PowerDNS Authoritative Server (Port 5300)
After=network.target mysql.service

[Service]
Type=simple
ExecStart=/usr/sbin/pdns_server --config-dir=/etc/powerdns --config-name=pdns --guardian=no --daemon=no --disable-syslog --log-timestamp=no --dnssec
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
